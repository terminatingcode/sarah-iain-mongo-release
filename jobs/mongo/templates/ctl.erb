#!/bin/bash

RUN_DIR=/var/vcap/sys/run/mongo
LOG_DIR=/var/vcap/sys/log/mongo
PIDFILE=${RUN_DIR}/pid

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    echo $$ > $PIDFILE

    <%# export PATH=/var/vcap/packages/ruby_1.9.3/bin:$PATH %>

    <%# exec /var/vcap/packages/ruby_1.9.3/bin/bundle exec \ %>
    <%#   rackup -p <%= properties.web_ui.port %1> \ %>
    <%#   >>  $LOG_DIR/web_ui.stdout.log \ %>
    <%#   2>> $LOG_DIR/web_ui.stderr.log %>

    <%# ;; %>

    echo "hello world"

  stop)
    kill -9 `cat $PIDFILE`
    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
