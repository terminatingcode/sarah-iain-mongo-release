#!/bin/bash

RUN_DIR=/var/vcap/sys/run/mongo
LOG_DIR=/var/vcap/sys/log/mongo
DATA_DIR=/var/vcap/store/mongodb
RUNAS=vcap
PIDFILE=${RUN_DIR}/pid

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR $DATA_DIR
    chown -R $RUNAS:$RUNAS $RUN_DIR $LOG_DIR $DATA_DIR

    echo $$ > $PIDFILE

    exec chpst -u $RUNAS:$RUNAS \
    /var/vcap/packages/mongo-3.6.0/bin/mongod --dbpath $DATA_DIR \
    >>$LOG_DIR/mongo.stdout.log 2>>$LOG_DIR/mongo.stderr.log

    ;;

  stop)
    kill -9 `cat $PIDFILE`
    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
